 
<body>
	<div class="wrapper">
		 

		<div class="main">
			 

			<main class="content">
				<div class="container-fluid p-0">

					<div class="mb-3">
						<h1 class="h3 d-inline align-middle">Business Profile</h1>
		 </div>
					<div class="row">
						<div class="col-md-4 col-xl-3">
							<div class="card mb-3">
								<div class="card-header">
 								</div>
								<div class="card-body text-center">
									<img src="/public/pictures/uprofile2.webp" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128" />
									<h5 class="card-title mb-0">     <% if(businessProfile!=undefined) {%>    <%= businessProfile.username %> <% } %> 
                                    </h5>
									<div class="text-muted mb-2">Business Profile </div>

								</div>
								 
							</div>
						</div>

						<div class="col-md-8 col-xl-9">
							<div class="card">
					
								<div class="card-body h-100">
    
                                    <form action="/business/profile/update" method="post">
                                        <div class="card">
                                              <a href="/dashboard/add/address" style="padding-left: 20px;">Add more Address here</a>
                                              <a href="/dashboard/add/admin" style="padding-left: 20px;">Add Admin here</a>
                                        
											  <div class="card-body">
                                                <% if(businessProfile!=undefined) {%> 
													<label for="name">Business Name</label>
                                                    <input type="text" required value="<%= businessProfile.name %>" class="form-control" name="name" placeholder="Enter name here">
                                                    <br>
													<label for="name">Business Headinng</label>
													<textarea name="heading" id="" cols="30" rows="14" class="form-control"><%= businessProfile.heading%>
													</textarea> <br>
                                                    <label for="name">Business Telephone</label>
                                                    <input type="text" required value="<%= businessProfile.phone%>" class="form-control" name="phone" placeholder="Enter telephone here">
                                                    <br>
													<label for="name">Business Address</label>
                                                    <input type="text" required value="<%= businessProfile.address %>" class="form-control" name="address" placeholder="Enter address here">
                                                    <br> 
													<label for="name">Business Email</label>
                                                    <input type="email" required value="<%= businessProfile.email%>" class="form-control" name="email" placeholder="Enter email here">
                                                    <br>
													<label for="name">Business About</label>
                                                    <br>
													<textarea name="about" id="" cols="30" rows="14" class="form-control"><%= businessProfile.about%>
													</textarea>
                                                     <input type="hidden" name="id" value="<%= businessProfile.id%>">
                                        
                                                    <input type="submit" class="submit" value="Update Info">
                                                   
										
                                                <% } %> 
                                                <style>
                                                    .submit{
                                                        width:120px;
                                                        margin-top: 20px;
                                                        border: 1px solid rgb(197, 193, 193);
                                                        padding: 8px 12px;
                                                        border-radius: 2px;
                                                        color: rgb(55, 54, 54);
                                                    }
													.submit:hover{
														border: 1px solid rgb(40, 40, 40);
													}
                                                    .form-control{
                                                        height: 50px;
                                                    }
                                                </style>
    
                                            </div>
                                        </div>
    
                                    </form>
									
  
								</div>
							</div>
						</div>
					</div>

				</div>
			</main>
  
		</div>
	</div>

 
</body>

</html>