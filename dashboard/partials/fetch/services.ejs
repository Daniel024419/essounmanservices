					<div class="row">
					 
						<div class="col-12 col-lg-8 col-xxl-9 d-flex">
							<div class="card flex-fill">
                                <div class="card-header">

									<h5 class="card-title mb-0">Services (<%= result_services_admins.length %> )</h5>
								</div>
                                <form action="/service/add" method="post">
                                    <div class="card">
                                        
                                        <div class="card-body">
                                            <% //if(serviceName!=undefined) {%> 
                                            <!-- <input type="text" required class="form-control" value="<%=//serviceName.name %> " name="service" placeholder="Enter services name here"> -->
                                            
                                            <% //}else{%>
                                                <input type="text" required class="form-control" name="service" placeholder="Enter services name here">
                                              <br>
                                              <input type="text" required class="form-control" name="price" placeholder="Enter hour price here">
                                              <% //} %>  
                                            <input type="submit" class="submit" value="Add">
                                            <style>
                                                .submit{
                                                    width:60px;
                                                    margin-top: 20px;
                                                    border: 1px solid #ccc;
                                                    padding: 3px 9px;
                                                    border-radius: 2px;
                                                }
                                            </style>

                                        </div>
                                    </div>

                                </form>
								<table class="table table-hover my-0">
									<thead>
										<tr>
											<th>#</th>
                                            <!-- <th>User Id</th> -->
        
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Visibility</th>
                                            <th>Action</th>
                                            
										</tr>
									</thead>
									<tbody>
										 
                                        <% if(result_services_admins!=undefined) {%> 

                                        <% for( let index = 0; index < result_services_admins.length; index++ ) { %>


                                            <tr>
                                                <td><%= result_services_admins[index].id%></td>
                                                 <td><%= result_services_admins[index].name%></td>
                                                 <td>GHS <%= result_services_admins[index].hour_price%>.00</td>
                                                 <% if(result_services_admins[index].control==0){ %> 
                                                     <td  style="color: rgb(198, 20, 20);padding: 2px;text-decoration: none;">Hidden</td>
                                                 <% }else if(result_services_admins[index].control==1){ %> 
                                                    <td  style="color: rgb(8, 220, 26);padding: 2px;text-decoration: none;">Visible</td>
                                                 <% } %> 
                                                  <td>
                                                    <% if(result_services_admins[index].control==0){ %> 
                                                    <span class="badge " style="background-color: rgb(19, 4, 236);padding: 10px;">
                                                    <a href="/edit-services/show/<%=result_services_admins[index].id%> " style="color: white;padding: 2px;text-decoration: none;">Show</a>
                                                    </span>
                                                    
                                                    <% }else if(result_services_admins[index].control==1){ %>
                                                        <span class="badge " style="background-color: rgb(19, 4, 236);padding: 10px 12px;">
                                                            <a href="/edit-services/hide/<%=result_services_admins[index].id%> " style="color: white;padding: 2px;text-decoration: none;">Hide</a>
                                                            </span>
                                                    <% } %>  

                                                    <span class="badge " style="background-color: rgb(236, 19, 4);padding: 10px 12px;">
                                                        <a href="#"  onclick="warn();"
                                                             style="color: white;padding: 3px;text-decoration: none;"> Del</a>
                                                    </span>
                                                    <span class="badge " style="background-color: rgb(236, 19, 4);padding: 10px 12px;">
                                                        <a href="/edit-services/<%=result_services_admins[index].id%> "
                                                             style="color: white;padding: 2px;text-decoration: none;">Edit</a>
                                                    </span>
                                                </td>
                                                

                                                <script>
                                                    function warn(){
                                                      const  conf= confirm('Do you want to delete this services?');
                                                      if(conf==true){
                                                        window.location.href='/delete-services/<%=result_services_admins[index].id%>';
                                                        return true;
                                                      }
                                                      else{
                                                        return false;
                                                      }
                                                    }

                                                    
                                                </script>
                                               
                                                <!-- <td class="d-none d-xl-table-cell">01/01/2021</td>
                                                <td class="d-none d-xl-table-cell">31/06/2021</td>
                                                <td><span class="badge bg-warning">In progress</span></td>
                                                <td class="d-none d-md-table-cell">William Harris</td> -->
                                            </tr>
                                        <% } %>


                                        <% } else{%>  

                                            <tr colspan="4">
                                                <td class="d-none d-md-table-cell">You do not have any services yet..</td>
                                            </tr>
                                            <%  }%> 



									</tbody>
								</table>
							</div>
						</div>
						 
					</div>

			 

	 

 
 