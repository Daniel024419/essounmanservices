<section class="signup">
    <div id="id02" class="modal">

        <form class="modal-content animate"
        action="/signup">
        <div class="imgcontainer">
        <span onclick="document
        .getElementById('id02')
        
        .style.display='none'"
        class="close" title="Close Modal">
            &times;</span>
        
         <img src="img_profile.png"
         alt="Avatar"
         class="avatar">
            </div>
        
        
         <div class="container">
          <label><b>Username signup</b></label>
          <input type="text" placeholder=
          "Enter Username"
          name="uname" required>
        
        
        <label><b>Password</b></label>
        <input type="password" placeholder=
        "Enter Password" name="psw" required>
        
        
        <button type="submit" class="btnlogin">Login</button>
    <input type="radio"
        checked="checked">
        Remember me
        </div>
        
        
         <div class="container"
         style="background-color:#f1f1f1">
         <button type="button"
         onclick="document.getElementById
         ('id02').style.
        
         display='none'" class="cancelbtn btnlogin">

         Cancel</button>
         
         <span class="psw">Forgot
         <a href="#">password?
        
         </a></span>
          </div>
          </form>
        </div>
        
        <script>
        
        // Get the modal 
        
        var modal = document.getElementById
        ('id02');
        
        // When the user clicks anywhere
        //outside of the modal, close it 
        
        window.onclick = function(event) {
            if (event.target == modal) {
             modal.style.display = "none";
            }
        }
        </script>
        </section>

